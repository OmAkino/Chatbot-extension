
{
  "manifest_version": 3,
  "name": "Chatbot Extension",
  "version": "1.0",
  "permissions": ["storage", "scripting" , "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chatbot.html", "style.css", "chatbot.js"],
      "matches": ["<all_urls>"]
    }
  ]
}



